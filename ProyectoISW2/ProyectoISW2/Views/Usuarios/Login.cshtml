@model ProyectoISW2.Models.Usuario
@{
    ViewBag.Title = "Login";
    string Nombre = ViewBag.Nombre;
    string Contraseña = ViewBag.Contraseña;
}

<h2>Login</h2>
@using (Html.BeginForm("Login", "Usuarios", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("Nombre")
        </div>
    </div>
    @Html.Label(" ");
    <div class="form-group">
        @Html.Label("Contraseña", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("Contraseña", "", new { @type = "password" })
        </div>
    </div>
    @Html.Label(" ");
                    //@ViewBag.LabelError
                    <div class="has-error">@ViewBag.Message</div>
                    <p>
                        <input type="submit" value="Ingresar" />
                    </p>

}
