@model IEnumerable<ProyectoISW2.Models.Proyector>

@{
    ViewBag.Title = "Index";
}
<div class="formcustom form-horizontal">
    
    <h3>Proyectores</h3>

    <p>
        @Html.ActionLink("Crear Nuevo Proyector", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asignacion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Asignacion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) 
                    
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>